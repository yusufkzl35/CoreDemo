@using CoreDemo.Controllers

@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td><a href="/EmployeeTest/DeleteEmployee/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/EmployeeTest/EditEmployee/@item.ID/" class="btn btn-primary">Düzenle</a></td>
        </tr>

    }

</table>

<a href="/EmployeeTest/AddEmployee/" class="btn btn-success">Yeni Çalışan Girişi</a>